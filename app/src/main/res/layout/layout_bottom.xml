<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/color_layout"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:visibility="gone"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textColor="@color/black_80"
            android:textSize="18sp"
            android:id="@+id/color_more"
            android:gravity="center"
            android:text="@string/more_color"
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/color_1"
            android:background="@color/user_icon_1"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <View
            android:id="@+id/color_2"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/user_icon_2"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <View
            android:id="@+id/color_3"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/user_icon_3"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <View
            android:id="@+id/color_4"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/user_icon_4"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <View
            android:id="@+id/color_5"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/user_icon_5"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <View
            android:id="@+id/color_6"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/user_icon_6"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <View
            android:id="@+id/color_7"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/user_icon_7"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <View
            android:id="@+id/color_8"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/user_icon_8"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </LinearLayout>

</ScrollView>
